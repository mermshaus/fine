<table>
    <tr>
        <th rowspan="3">Album</th>
        <th rowspan="3">Images</th>
        <th rowspan="3">size</th>
        <th colspan="<?=(count($this->prefixes) * 2)?>">Cache</th>
    </tr>
    <tr>
        <?php foreach ($this->prefixes as $prefix): ?>
            <th colspan="2"><?=$this->e($prefix)?></th>
        <?php endforeach; ?>
    </tr>
    <tr>
        <?php foreach ($this->prefixes as $prefix): ?>
            <th>count</th>
            <th>size</th>
        <?php endforeach; ?>
    </tr>

<?php foreach ($this->info as $album => $data): ?>

<tr>
