        $webPath1 = $this->url('detail', array(
            'album'    => $this->album,
            'filename' => $bild->getBasename()
        ));

        $webPath = $this->url('image', array(
            'album'    => $this->album,
            'filename' => $bild->getBasename(),
            'element'  => 'thumb'
        ));
        ?>

        <li>
            <div class="image-container">
            <?php
            $title = implode("\n", array(
                $bild->getBasename()
            ));
