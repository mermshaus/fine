            ));
            */
            ?>

            <a<?=($first)?' data-action="navigation-detail"':''?> href="<?=$this->e($webPath1)?>" title="<?=$this->e($title)?>">
                <img src="<?=$this->e($webPath)?>" />
            </a>
            </div>
        </li>

        <?php $first = false; ?>
